<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ed134a"
    android:orientation="vertical">
    <!-- Header goes here -->

    <!-- Body goes here -->
    <ScrollView
        android:id="@+id/holdsTexts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/realHoldsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number Of Villagers" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekBarVillager"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="20"
                    android:progressDrawable="@drawable/progress"
                    android:thumb="@drawable/thumb" />

                <TextView
                    android:id="@+id/villagerNumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="0" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Number Of Mafia" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekBarMafia"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:indeterminate="false"
                    android:max="20"
                    android:progressDrawable="@drawable/progress"
                    android:thumb="@drawable/thumb" />

                <TextView
                    android:id="@+id/mafiaNumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="0" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Number Of Angels" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekBarAngel"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="20"
                    android:progressDrawable="@drawable/progress"
                    android:thumb="@drawable/thumb" />

                <TextView
                    android:id="@+id/angelNumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="0" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <!-- footer goes here -->

</LinearLayout>

