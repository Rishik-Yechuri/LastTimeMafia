<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#ed134a"
    android:layout_height="fill_parent">
    <!-- Header goes here -->

    <!-- Body goes here -->
    <ScrollView
        android:id="@+id/holdsTexts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/realHoldsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>
    <!-- footer goes here -->
    <LinearLayout
        android:id="@+id/linearLayoutTextHolder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <Space
            android:id="@+id/leftTextSpace"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:layout_weight="1"
            android:hint="Type a message"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.158"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.992" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/circularbutton"
            android:text="Send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.995" />

        <Space
            android:id="@+id/rightTextSpace"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

